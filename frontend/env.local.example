# ============================================================================
# オリエンタルシナジー フロントエンド環境変数
# 使用方法: このファイルを .env.local にコピーして使用してください
# cp env.local.example .env.local
# ============================================================================

# API設定
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# アプリケーション設定
NEXT_PUBLIC_APP_NAME="オリエンタルシナジー"
NEXT_PUBLIC_APP_VERSION=1.0.0

# LINE設定
NEXT_PUBLIC_LINE_LIFF_ID=your-line-liff-id-here
NEXT_PUBLIC_LINE_LOGIN_CHANNEL_ID=your-line-login-channel-id

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# 機能フラグ
NEXT_PUBLIC_ENABLE_LINE_LOGIN=true
NEXT_PUBLIC_ENABLE_LINE_ATTENDANCE=true
NEXT_PUBLIC_ENABLE_GPS_TRACKING=false

# ページネーション
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# ファイルアップロード
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB（バイト）
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif

# Sentry（エラー監視）
NEXT_PUBLIC_SENTRY_DSN=  # Sentry DSN（本番環境のみ）

# 環境
NEXT_PUBLIC_ENVIRONMENT=development

