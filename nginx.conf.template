# ============================================================================
# Oriental Synergy Nginx設定ファイル
# 場所: /etc/nginx/sites-available/oriental-synergy
# ============================================================================

# バックエンドAPIサーバー
upstream backend {
    server 127.0.0.1:8000;
    keepalive 32;
}

# フロントエンドサーバー
upstream frontend {
    server 127.0.0.1:3000;
    keepalive 32;
}

# HTTP → HTTPS リダイレクト（SSL設定後にコメント解除）
