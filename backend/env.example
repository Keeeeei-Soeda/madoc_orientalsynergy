# ============================================================================
# オリエンタルシナジー バックエンド環境変数
# 使用方法: このファイルを .env にコピーして使用してください
# cp env.example .env
# ============================================================================

# 環境設定
ENVIRONMENT=development  # development / staging / production

# アプリケーション設定
APP_NAME="オリエンタルシナジー 派遣業務管理システム"
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
DEBUG=True

# サーバー設定
HOST=0.0.0.0
PORT=8000

# データベース設定
DATABASE_URL=postgresql://oriental_user:oriental_pass@localhost:5432/oriental_db
DATABASE_ECHO=False  # SQLのログ出力（開発時のみTrue）

# Redis設定
REDIS_URL=redis://:oriental_redis_pass@localhost:6379/0
REDIS_CACHE_TTL=3600  # キャッシュTTL（秒）

# JWT設定
SECRET_KEY=your-secret-key-change-in-production-must-be-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# メール設定
MAIL_FROM=noreply@orientalsynergy.com
MAIL_FROM_NAME="オリエンタルシナジー"

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key-here
# または AWS SES
AWS_SES_REGION=ap-northeast-1
AWS_SES_ACCESS_KEY=your-aws-access-key
AWS_SES_SECRET_KEY=your-aws-secret-key

# 開発環境用（Mailhog）
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=False

# LINE設定
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_LIFF_ID=your-line-liff-id

# AWS S3設定
AWS_S3_BUCKET=oriental-synergy-uploads
AWS_S3_REGION=ap-northeast-1
AWS_S3_ACCESS_KEY=your-aws-s3-access-key
AWS_S3_SECRET_KEY=your-aws-s3-secret-key
AWS_S3_CUSTOM_DOMAIN=  # CloudFrontのドメイン（オプション）

# ファイルアップロード設定
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB（バイト）
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif
ALLOWED_FILE_EXTENSIONS=pdf,jpg,jpeg,png

# セキュリティ設定
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# レート制限
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5

# ログ設定
LOG_LEVEL=INFO  # DEBUG / INFO / WARNING / ERROR / CRITICAL
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=10

# Sentry（エラー監視）
SENTRY_DSN=  # Sentry DSN（本番環境のみ）

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# タイムゾーン
TIMEZONE=Asia/Tokyo

# ページネーション
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# バックグラウンドタスク
CELERY_BROKER_URL=redis://:oriental_redis_pass@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:oriental_redis_pass@localhost:6379/2

