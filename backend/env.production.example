# ============================================================================
# Oriental Synergy バックエンド 本番環境設定
# ============================================================================
# このファイルをコピーして .env として使用してください
# cp env.production.example .env

# ============================================================================
# データベース設定
# ============================================================================
# SQLite（本番環境）
DATABASE_URL=sqlite:////app/data/oriental_synergy.db

# PostgreSQLを使用する場合（将来的に）
# DATABASE_URL=postgresql://oriental_user:oriental_pass@postgres:5432/oriental_db

# ============================================================================
# セキュリティ設定
# ============================================================================
# SECRET_KEY: 以下のコマンドで生成してください
# python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING

# JWT設定
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# CORS設定
# ============================================================================
# 本番環境のドメインまたはIPアドレスを設定
BACKEND_CORS_ORIGINS=["http://162.43.15.173","http://x162-43-15-173.static.xvps.ne.jp"]
# 独自ドメインを使用する場合:
# BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# ============================================================================
# サーバー設定
# ============================================================================
HOST=0.0.0.0
PORT=8000

# ============================================================================
# 環境設定
# ============================================================================
ENVIRONMENT=production
DEBUG=False

# ============================================================================
# LINE連携設定（将来的に使用）
# ============================================================================
# LINE_CHANNEL_ID=your_channel_id
# LINE_CHANNEL_SECRET=your_channel_secret
# LINE_LIFF_ID=your_liff_id

# ============================================================================
# メール設定（将来的に使用）
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@orientalsynergy.com

# ============================================================================
# ログ設定
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# ============================================================================
# アップロード設定
# ============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# ============================================================================
# セッション設定
# ============================================================================
SESSION_TIMEOUT=3600  # 1時間（秒）





